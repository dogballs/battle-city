{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    // Double quotes is a default, more comfortable working with single quotes
    // as most JS developers. Double quotes were choses as a default by TS
    // creators because it is easier to switch between different languages
    // and have a similar syntax for strings.
    // https://stackoverflow.com/q/25453864/1573638
    "quotemark": [true, "single"]
  }
}
